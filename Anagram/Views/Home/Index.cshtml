<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Will it Anagram?</title>
  </head>
  <body>
    <div class="container">

      <form action="/submit" method="post">
        <div class="form-group">
          <label for="user-word">Enter a Word</label>
          <input type="text" name="user-word" class="form-control">
        </div>

        <div class="form-group">
          <label for="user-word">Enter Some Words</label>
          <input type="text" name="list-word1" class="form-control">
          <input type="text" name="list-word2" class="form-control">
          <input type="text" name="list-word3" class="form-control">
          <input type="text" name="list-word4" class="form-control">
          <input type="text" name="list-word5" class="form-control">
        </div>

        <button class="btn btn-danger" type="submit" name="button">Submit</button>
      </form>
      @if (Model.Count == 0)
      {
        <p>butt</p>
      }
      else
      {
        <ul>
          @foreach (var word in Model)
          {
            <li>@word</li>
          }
        </ul>
      }

    </div>
  </body>
</html>
